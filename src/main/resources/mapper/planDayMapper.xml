    <insert id="insert" parameterType="PlanDayDTO">
        INSERT INTO plan_day (plan_id, day_date, day_summary)
        VALUES (#{planId}, #{dayDate}, #{daySummary})
    </insert>

    <select id="getByPlanId" parameterType="Long" resultType="PlanDayDTO">
        SELECT id, plan_id, day_date, day_summary
        FROM plan_day
        WHERE plan_id = #{planId}
